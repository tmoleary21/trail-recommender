script_dir=$(dirname "$0")

if [ ! -d "$script_dir/env" ];
then
    python3.9 -m venv env
fi

source $script_dir/env/bin/activate

command=$1

case $command in 
    install)
        pip install -r $script_dir/requirements.txt
    ;;
    run)
        python "${@:2}"
    ;;
    "") 
        # If no command, does nothing. Good for if you want to source the env with
        # source pyenv
    ;;
esac
